generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


// Enums
enum Categories  {
  tools
}




// **********************************************
// Models

// User
// Order
/* "Company",   "Order", "Stock Location", "Invoice", "Customer" (maybe), "Supplier" (maybe). */

model User{
   id           String @id @default(auto()) @map("_id") @db.ObjectId
   firstName    String
   lastName     String
   createdAt    DateTime
} 

model Company {
   id    String @id @default(auto()) @map("_id") @db.ObjectId
   createdAt DateTime
   name String
}

model Invoice {
   id    String @id @default(auto()) @map("_id") @db.ObjectId
}

model Order{
    id    String @id @default(auto()) @map("_id") @db.ObjectId
} 

model OrderItem{
    id    String @id @default(auto()) @map("_id") @db.ObjectId

}

model Stock{
    id    String @id @default(auto()) @map("_id") @db.ObjectId
}
